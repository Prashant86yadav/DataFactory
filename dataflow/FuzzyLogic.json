{
	"name": "FuzzyLogic",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "TestBlob",
						"type": "DatasetReference"
					},
					"name": "sourceEMP"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "CreateFullName"
				},
				{
					"name": "MapName"
				}
			],
			"scriptLines": [
				"source(output(",
				"          empid as short,",
				"          lastname as string,",
				"          firstname as string,",
				"          title as string,",
				"          titleofcourtesy as string,",
				"          birthdate as date 'dd-MM-yy',",
				"          hiredate as date 'dd-MM-yy',",
				"          address as string,",
				"          city as string,",
				"          region as string,",
				"          postalcode as short,",
				"          country as string,",
				"          phone as string,",
				"          mgrid as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceEMP",
				"sourceEMP derive(FullName = concat(firstname, lastname)) ~> CreateFullName",
				"CreateFullName select(mapColumn(",
				"          empid,",
				"          lastname,",
				"          firstname,",
				"          title,",
				"          titleofcourtesy,",
				"          birthdate,",
				"          hiredate,",
				"          address,",
				"          city,",
				"          region,",
				"          postalcode,",
				"          country,",
				"          phone,",
				"          mgrid,",
				"          FullName,",
				"          each(match(instr(lower(name),'lastname') > 0),",
				"               'lastname' = $$)",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> MapName"
			]
		}
	}
}